+    <meta name="viewport" content="width=device-width, initial-scale=1">
+    <title>{{ title or "Stocks Dashboard" }}</title>
+    <link rel="stylesheet" href="{{ url_for('static', filename='mobile.css') }}">
+  </head>
+  <body class="container">
