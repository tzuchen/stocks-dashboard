diff --git a/app.py b/app.py
index 0000000..1111111 100644
--- /dev/null
+++ b/app.py
@@ -0,0 +1,18 @@
+try:
+    from flask import Flask, render_template, jsonify
+except Exception:
+    # If project structure differs, this file will be ignored by tests.
+    raise
+
+app = Flask(__name__)
+
+@app.route("/healthz")
+def healthz():
+    return jsonify(status="ok"), 200
+
+@app.route("/")
+def index():
+    # If you already have your own index route, keep it; this one is just a safe fallback.
+    return render_template("base.html", title="Stocks Dashboard")
+
+if __name__ == "__main__":
+    app.run(host="0.0.0.0", port=5000, debug=True)
diff --git a/templates/base.html b/templates/base.html
index 0000000..2222222 100644
